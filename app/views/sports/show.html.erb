<% content_for :header_title, @sport.name %>
<% content_for :header_background, "logo.png" %>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @sport %>

    <% if @future_activities.any? %>
      <h2>Futures activit√©s pour moi</h2>

      <% @future_activities.each do |activity| %>
        <%= render activity %>
      <% end %>
    <% end %>

    <%= link_to "Organiser", new_sport_activity_path(@sport), class: "y-btn y-btn-green bg-blue-500" %>

    <%= link_to 'Edit this sport', edit_sport_path(@sport), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this sport', sport_path(@sport), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to sports', sports_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>

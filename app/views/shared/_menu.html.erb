<% if current_user %>
  <div id="dropdown" data-toggle-target="toggleable" class="hidden bg-white text-black overflow-y-auto absolute w-full left-0 z-10 rounded-md space-y-4 p-4">
    <ul class="space-y-2" aria-labelledby="dropdownDefaultButton">
      <li class="flex items-center space-x-3">
        <%= inline_svg_tag "svg/home.svg", class: "w-5" %>
        <%= link_to "Tableau de bord", root_path %>
      </li>
      <li class="flex items-center space-x-3">
        <%= inline_svg_tag "svg/calendar.svg", class: "w-5" %>
        <%= link_to "Évènements", activities_path %>
      </li>
      <li class="flex items-center space-x-3">
        <%= inline_svg_tag "svg/user-circle.svg", class: "w-5" %>
        <%= link_to "Profil", athlete_path(current_user) %>
      </li>
      <% if current_user.admin? && Comment.reported.any? %>
        <li class="flex items-center space-x-3">
          <%= inline_svg_tag "svg/chat.svg", class: "w-5" %>
          <%= link_to "Gestion des commentaires", admin_comments_path %>
        </li>
      <% end %>
      <li class="flex items-center space-x-3">
        <%= inline_svg_tag "svg/logout.svg", class: "w-5" %>
        <%= link_to "Se déconnecter", destroy_user_session_path, data: { turbo_method: :delete } %>
      </li>
    </ul>
  </div>
<% end %>
